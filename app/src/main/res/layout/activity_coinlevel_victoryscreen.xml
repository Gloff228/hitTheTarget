<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_white"
    android:screenOrientation="landscape">


    <ImageView
        android:id="@+id/restartCoinLevel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/counter"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.5"
        android:onClick="onRestartButtonClick"
        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Играть"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/restartCoinLevel"
        app:layout_constraintLeft_toLeftOf="@id/restartCoinLevel"
        app:layout_constraintRight_toRightOf="@id/restartCoinLevel"
        app:layout_constraintBottom_toBottomOf="@id/restartCoinLevel"/>

    <ImageView
        android:id="@+id/exitCoinLevel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/counter"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.5"
        android:onClick="onExitButtonClick"
        android:clickable="true"
        android:focusable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/exitCoinLevel"
        app:layout_constraintLeft_toLeftOf="@id/exitCoinLevel"
        app:layout_constraintRight_toRightOf="@id/exitCoinLevel"
        app:layout_constraintBottom_toBottomOf="@id/exitCoinLevel"/>

</androidx.constraintlayout.widget.ConstraintLayout>